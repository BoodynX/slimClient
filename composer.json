{
    "name": "slim/slim-skeleton",
    "description": "Personal Test",
    "homepage": "http://github.com/boodynx/slimClient",
    "authors": [
        {
            "name": "Tomasz Budny",
            "email": "budny.tomasz@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
